# ============================================
# HalalMap Georgia - Backend Environment Configuration
# ============================================

# Database Configuration
# Option 1: Full connection string (recommended for cloud databases like Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Individual connection parameters
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=halalmap
# DB_USER=postgres
# DB_PASSWORD=your-password

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# Node Environment
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=5000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Google Maps Configuration (if needed)
# GOOGLE_MAPS_API_KEY=your-api-key

# Logging Level
LOG_LEVEL=info
